# ========================================
# NEXT.JS APP ENVIRONMENT VARIABLES
# ========================================

# ========================================
# CLERK AUTHENTICATION (REQUIRED)
# ========================================
# Get these from your Clerk Dashboard: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# ========================================
# DATABASE (REQUIRED)
# ========================================
# Your database connection string (PostgreSQL recommended)
DATABASE_URL="postgresql://username:password@localhost:5432/weeziq_db"

# ========================================
# WEB SOCKET & AI SERVICE (REQUIRED)
# ========================================
# After deploying the ws-service to Cloudflare, update these URLs
NEXT_PUBLIC_WS_URL=wss://your-worker.your-subdomain.workers.dev/ws
NEXT_PUBLIC_AI_API_URL=https://your-worker.your-subdomain.workers.dev

# For local development (Socket.io)
NEXT_PUBLIC_SOCKET_URL=http://localhost:8787

# ========================================
# APP URL (REQUIRED)
# ========================================
# Your Next.js app URL (for production, this will be your Vercel domain)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# UPLOADCARE (REQUIRED)
# ========================================
# Get these from your UploadCare Dashboard: https://uploadcare.com/dashboard/
NEXT_PUBLIC_UPLOAD_CARE_PUBLIC_KEY=your_uploadcare_public_key_here

# ========================================
# PAYMENT (RAZORPAY) - OPTIONAL
# ========================================
# Get these from your Razorpay Dashboard: https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ========================================
# GOOGLE INTEGRATION - OPTIONAL
# ========================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/integrations/google/callback

# ========================================
# EMAIL (NODEMAILER) - REQUIRED FOR CONTACT FORM
# ========================================
# For sending emails (contact form, notifications, etc.)
# Use Gmail with App Password (2FA must be enabled)
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# ========================================
# DEVELOPMENT & DEBUGGING - OPTIONAL
# ========================================
# Set to "true" to skip IP detection (useful for development)
SKIP_IP_DETECTION=false

# Set to "true" to enable IP debugging
DEBUG_IP=false

# ========================================
# DEPRECATED (NOT USED IN MONOREPO)
# ========================================
# These are no longer used after moving to monorepo structure
# OPENAI_API_KEY (now handled by ws-service)
# GOOGLE_AI_API_KEY (now handled by ws-service)
# PUSHER_* (replaced with WebSocket service)
