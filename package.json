{
  "name": "weeziq-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:ws\"",
    "dev:next": "cd apps/nextjs-app && npm run dev",
    "dev:ws": "cd apps/ws-service && npm run dev",
    "dev:all": "concurrently \"npm run dev:next\" \"npm run dev:ws\"",
    "build:next": "cd apps/nextjs-app && npm run build",
    "build:ws": "cd apps/ws-service && npm run build",
    "deploy:next": "cd apps/nextjs-app && npm run build",
    "deploy:ws": "cd apps/ws-service && npm run deploy",
    "install:all": "npm install && cd apps/nextjs-app && npm install && cd ../ws-service && npm install",
    "clean": "npm run clean:next && npm run clean:ws",
    "clean:next": "cd apps/nextjs-app && rm -rf .next node_modules",
    "clean:ws": "cd apps/ws-service && rm -rf .wrangler node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "typescript": "^5"
  }
}
